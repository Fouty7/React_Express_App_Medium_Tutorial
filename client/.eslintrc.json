{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
    }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/prop-types": "off",
        "comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-unexpected-multiline": "warn"
    },
    "globals": {
        "process": true
      },
      "settings": {
        "react": {
          "version": "detect"
        }
      }  
}
