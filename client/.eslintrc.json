{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true,
        "experimentalObjectRestSpread": true
    }
  },
  "plugins": [
    "react"
  ],
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "rules": {
    "react/prop-types": "off",
    "comma-dangle": 0,
    "react/jsx-uses-vars": 1,
    "react/display-name": 1,
    "no-unused-vars": "warn",
    "no-unexpected-multiline": "warn"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }  
}
